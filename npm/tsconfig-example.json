{
    "compilerOptions": {
        "module": "commonjs",
				"emitDecoratorMetadata": true,
				"experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist-example",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "example/**/*"
    ]
}
